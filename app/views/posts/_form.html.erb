<%= form_for @post do |p| %>

  <%= p.label :title, "Title" %>
  <%= p.text_field :title %><br>

  <%= p.label :body, "Body" %>
  <%= p.text_area :body %><br>

<!-- collection check_boxes -->
  <%= p.label :tag_ids, 'Tags' %><br>
  <%= p.collection_check_boxes(:tag_ids, Tag.all, :id, :name) %><br>

<!-- radio buttons -->
<br>
  <%= p.label :category_id, 'Category (Radio)' %>
  <%= p.collection_radio_buttons(:category_id, Category.all, :id, :name )%>


  <%= p.submit %>

<% end %>


